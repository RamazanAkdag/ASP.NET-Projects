@model ShippingDetailsViewModel

<form asp-controller="Cart" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetail.FirstName">Ad</label>
        <input type="text" asp-for="ShippingDetail.FirstName" class="form-control" placeholder="Müşteri Adı"/>
        <span asp-validation-for="ShippingDetail.FirstName"></span>

    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.LastName">Soyad</label>
        <input type="text" asp-for="ShippingDetail.LastName" class="form-control" placeholder="Soyad" />
        <span asp-validation-for="ShippingDetail.LastName"></span>

    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Email">Email</label>
        <input type="text" asp-for="ShippingDetail.Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="ShippingDetail.Age"></span>

    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.City">Şehir</label>
        <input type="text" asp-for="ShippingDetail.City" class="form-control" placeholder="Şehir" />
        <span asp-validation-for="ShippingDetail.City"></span>

    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Address">Adres</label>
        <input type="text" asp-for="ShippingDetail.Address" class="form-control" placeholder="Adres" />
        <span asp-validation-for="ShippingDetail.Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Age">Yaş</label>
        <input type="text" asp-for="ShippingDetail.Age" class="form-control" placeholder="Yaş" />
        <span asp-validation-for="ShippingDetail.Age"></span>
    </div>

    <input type="submit" class="btn btn-group-sm btn-success" /> 

</form>
